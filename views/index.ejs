<!DOCTYPE html>
<html>
<head>
    <title>To-Do List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1 style="text-decoration: underline;">To-Do List</h1>
    <button> <a style="text-decoration: none;" href="/add">Add Task</a></button>
    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <h3><%= task.title %></h3>
                <p><%= task.description %></p>
                <p>Status: <%= task.completed ? "Completed" : "Incomplete" %></p>
                <button><a style="text-decoration: none;" href="/edit/<%= task._id %>">Edit</a></button>
                <button><a style="text-decoration: none;" href="/delete/<%= task._id %>">Delete</a></button>
            </li>
        <% }) %>
    </ul>
</body>
</html>
